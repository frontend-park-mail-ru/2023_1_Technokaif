<div class="{{lineListClass}}">
<!--    todo rewrite later-->
    {{#ifEquals isArtistPage true}}
        <p class="{{title}}">{{titleText}}</p>
    {{/ifEquals}}

    {{#ifEquals isShowTitle true}}
        {{#ifEquals isArtistPage false}}
            <p class="{{title}}">{{titleText}}</p>
        {{/ifEquals}}
    {{/ifEquals}}

    {{#ifEquals isArtistPage false}}
    <div class="{{trackLineOptions}} {{optionsBlock}}">
        <div class="{{lineIndex}}">
            <p>#</p>
        </div>
        <div class="{{lineBlock}}">
            <p>TITLE</p>
        </div>
        {{#ifEquals isPlaylistPage true}}
            <div class="{{albumDiv}}">
                <p>ALBUM</p>
            </div>
        {{/ifEquals}}
    </div>
    {{/ifEquals}}

    {{#each content}}
        {{> ../../smallComponents/Line/line.handlebars item = this root = ../. }}
    {{/each}}
</div>
