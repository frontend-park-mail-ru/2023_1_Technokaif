<div class="{{mainSexDiv}}">
    <div class="{{labelSex}}">
        <p class="{{labelClass}}">{{labelText}}</p>
    </div>
    <div class="{{divSexChoose}} js__gender">
        {{#each sexes}}
            <div class="{{this.insideDivSex}}">
                <input type="{{this.typeInput}}" name="{{this.nameInput}}" class="{{this.classSexInput}} js__gender__element" value="{{this.id}}" id={{this.id}}>
                <label for="{{this.id}}" class="{{this.classLabel}}">{{this.textLabel}}</label>
            </div>
        {{/each}}
    </div>
    <div class="{{errorSex}} js__error__gender"></div>
</div>
